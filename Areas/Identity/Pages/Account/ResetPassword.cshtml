@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ResetPasswordModel
@{
    ViewData["Title"] = HtmlLocalizer["ResetPasswordPage_Title"];
}

<div class="row">
    <div class="col-lg-4">
        <section>
            <form method="post">
                <h3>@ViewData["Title"]</h3>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="Input.Code" type="hidden"/>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"/>
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="invalid-feedback"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true"/>
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="invalid-feedback"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true"/>
                    <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                    <span asp-validation-for="Input.ConfirmPassword" class="invalid-feedback"></span>
                </div>
                <button type="submit" class="w-100 btn btn-lg btn-primary">@HtmlLocalizer["ResetPasswordPage_Button_Label"]</button>
            </form>

        </section>
    </div>
    <div class="col-lg-8">
        <section>
            <h3>@HtmlLocalizer["ResetPasswordPage_Procedure_Title"]</h3>
            <hr>
            @HtmlLocalizer["ResetPasswordPage_Procedure"]
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScripts" />
    <script>
        $(document).ready(function () {
            $("#login").addClass('active');
        })
    </script>
}
