@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = HtmlLocalizer["ResendEmailConfirmationPage_Title"];
}

<div class="row">
    <div class="col-lg-4">
        <section>
            <form method="post">
                <h3>@HtmlLocalizer["ResendEmailConfirmationPage_SubTitle"]</h3>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" aria-required="true"/>
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="invalid-feedback"></span>
                </div>
                <button type="submit" class="w-100 btn btn-lg btn-primary">@HtmlLocalizer["ResendEmailConfirmationPage_Button_Label"]</button>
            </form>

        </section>
    </div>
    <div class="col-lg-8">
        <section>
            <h3>@HtmlLocalizer["ResendEmailConfirmationPage_Procedure_Title"]</h3>
            <hr>
            @HtmlLocalizer["ResendEmailConfirmationPage_Procedure"]
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScripts" />
    <script>
        $(document).ready(function () {
            $("#login").addClass('active');
        })
    </script>
}
