@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ForgotPasswordModel
@{
    ViewData["Title"] = HtmlLocalizer["ForgotPasswordPage_Title"];
}

@* <h1>@ViewData["Title"]</h1> *@

<div class="row">
    <div class="col-lg-4">
        <section>
            <form method="post">
                <h3>@HtmlLocalizer["ForgotPasswordPage_SubTitle"]</h3>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"/>
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="w-100 btn btn-lg btn-primary">@HtmlLocalizer["ForgotPasswordPage_ResetButton_Label"]</button>
            </form>
        </section>
    </div>
    <div class="col-lg-8">
        <section>
            <h3>@HtmlLocalizer["ForgotPasswordPage_Procedure_Title"]</h3>
            <hr>
            @HtmlLocalizer["ForgotPasswordPage_Procedure"]
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScripts" />
    <script>
        $(document).ready(function () {
            $("#login").addClass('active');
        })
    </script>
}