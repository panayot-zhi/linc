@using Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    
    <!-- TODO: Add SEO here -->
    <title>@ViewData["Title"] - linc</title>
    <meta name="description" content="" />
    <meta name="author" content="" />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />

    <!-- Bootstrap icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Core theme CSS (includes Bootstrap) -->
    <link href="~/css/styles.css" rel="stylesheet" />
    
    <!-- Site overrides -->
    <link href="~/css/site.css" rel="stylesheet" />

</head>
<body>

<!-- Navigation-->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container px-4 px-lg-5">
        <a class="navbar-brand"href="/">linc.</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Превключи навигация">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                <li class="nav-item"><a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Index" title="Към началната страница">Начало</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="About" title="Информация за целите и обхвата на списанието">За списанието</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Team" title="Преглед на редколегия">Екип</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Codex" title="Преглед на етичния кодекс на списанието">Етичeн кодекс</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Submit" title="Изпратете материал за рецензия">Изпращане на текст</a></li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Индекс</a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item" href="#!">Архив</a></li>
                        <li><hr class="dropdown-divider"/></li>
                        <li><a class="dropdown-item" href="#!">Статии</a></li>
                        <li><a class="dropdown-item" href="#!">Анализи</a></li>
                        <li><a class="dropdown-item" href="#!">Анкети</a></li>
                        <li><a class="dropdown-item" href="#!">Дискусии</a></li>
                        <li><a class="dropdown-item" href="#!">Преглед</a></li>
                        <li><a class="dropdown-item" href="#!">Хроника</a></li>
                        <li><a class="dropdown-item" href="#!">Чуждестранни</a></li>
                    </ul>
                </li>
            </ul>

            <partial name="_LoginPartial"/>

        </div>
    </div>
</nav>

<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        @RenderBody()
    </div>
</section>

<!-- Footer-->
<footer class="py-5 bg-dark">
    <div class="container">
        <p class="m-0 text-center text-white">Copyright &copy; linc.uni-plovdiv.bg 2023 - Научете повече за политиката за <a asp-controller="Home" asp-action="Privacy">Поверителност на сайта</a></p>
    </div>
</footer>

<!-- Bootstrap core JS-->
<script src="~/lib/jquery/jquery.min.js"></script>
<script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>

<!-- Core theme JS-->
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)

<script>

</script>

</body>
</html>
