@using linc.Utility
@model ErrorViewModel

@* TODO: Localize *@

@{
    ViewData["Title"] = Model.StatusCode + " - Грешка на сървъра";
}

@section Breadcrumbs
{
    <!-- ======= Breadcrumbs Section ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>@ViewData["Title"]</h2>
                <ol>
                    <li>@Model.Path</li>
                </ol>
            </div>

        </div>
    </section><!-- Breadcrumbs Section -->
}

<!-- ======= Portfolio Details Section ======= -->
<div class="row gy-4">

    <div class="col-lg-8">
        <div class="d-flex justify-content-center">
            <img src="~/img/internal-server-error.jpg" alt="500 - Internal Server Error">
        </div>
    </div>

    <div class="col-lg-4">
        <div class="portfolio-description">
            <h2>За съжаление се натъкнахте на проблем, чиято причина е изцяло по наша вина.</h2>
            <p>
                Не би трябвало да виждате тази странца, моля, обърнете се към администратора на системата по email за да може да отстрани проблема възможно най-бързо.
            </p>
            <p>
                Моля, при забелязани грешки и други неизправности по системата, свържете се с администратора на системата посредством бутона по-долу.
            </p>
        </div>
    </div>

</div>
        
<environment exclude="Production">
    <div class="row gy-4">

        <div class="col-lg-12">
            <h2>@Model.Error</h2>
            <h4>@Model.ShortMessage</h4>
            <pre>@Model.StackTrace</pre>
        </div>

    </div>
</environment>
<!-- End Portfolio Details Section -->

@section Newsletter
{
    <div class="footer-newsletter">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <h4>@Model.ShortMessage</h4>
                    <p>@Model.RequestId</p>
                    <a href="mailto:@SiteConstant.AdministratorEmail" class="btn btn-danger">Докладвай за нередност</a>
                </div>
            </div>
        </div>
    </div>
}
