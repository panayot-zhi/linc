@using linc.Utility
@using linc.Models.Enumerations
@model LibraryViewModel
@{
    ViewData["Title"] = HtmlLocalizer["LibraryIndex_Title"];
}

@section Breadcrumbs {
    <!-- ======= Breadcrumbs ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>@ViewData["Title"]</h2>
                <ol>
                    <li>
                        <a href="/">@HtmlLocalizer["NavItem_Home"]</a>
                    </li>
                    <li>
                        <a asp-controller="Library" asp-action="Index">@HtmlLocalizer["NavItem_Library"]</a>
                    </li>
                    <li>@(EnumHelper<IndexCategory>.GetDisplayName(Model.Category))</li>
                </ol>
            </div>

        </div>
    </section>
    <!-- End Breadcrumbs -->
}

<section id="library-page">
    <div class="container">
        <p>
            Use this page to list category @(EnumHelper<IndexCategory>.GetDisplayName(Model.Category)).
        </p>
    </div>
</section>
