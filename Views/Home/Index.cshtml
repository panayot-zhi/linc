            <div class="d-flex">
                <a href="#about" class="btn-get-started scrollto">@HtmlLocalizer["GetStarted_Message"]</a>
                @* <a href="https://www.youtube.com/watch?v=ouH107WFcQk" class="glightbox btn-watch-video"><i class="bi bi-play-circle"></i><span>@HtmlLocalizer["WatchVideo_Message"]</span></a> *@
