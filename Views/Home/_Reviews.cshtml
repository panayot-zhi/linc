@model ReviewsViewModel

<!-- ======= Skills Section ======= -->
<section id="skills" class="skills">
    <div class="container" data-aos="fade-up">

        <div class="row skills-content">

            <div class="col-lg-6">

                <div class="progress">
                    <span class="skill">@HtmlLocalizer["IndexArticles_NavItem"] <i class="val">@Model.ReviewedArticlesPercent%</i></span>
                    <div class="progress-bar-wrap">
                        <div class="progress-bar" role="progressbar" aria-valuenow="@Model.ReviewedArticlesPercent" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>

                <div class="progress">
                    <span class="skill">@HtmlLocalizer["IndexAnalyses_NavItem"] <i class="val">@Model.ReviewedAnalysesPercent%</i></span>
                    <div class="progress-bar-wrap">
                        <div class="progress-bar" role="progressbar" aria-valuenow="@Model.ReviewedAnalysesPercent" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>

                <div class="progress">
                    <span class="skill">@HtmlLocalizer["IndexSurveys_NavItem"] <i class="val">@Model.ReviewedSurveysPercent%</i></span>
                    <div class="progress-bar-wrap">
                        <div class="progress-bar" role="progressbar" aria-valuenow="@Model.ReviewedSurveysPercent" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>

            </div>

            <div class="col-lg-6">

                <div class="progress">
                    <span class="skill">@HtmlLocalizer["IndexDiscussions_NavItem"] <i class="val">@Model.ReviewedDiscussionsPercent%</i></span>
                    <div class="progress-bar-wrap">
                        <div class="progress-bar" role="progressbar" aria-valuenow="@Model.ReviewedDiscussionsPercent" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>

                <div class="progress">
                    <span class="skill">@HtmlLocalizer["IndexReviews_NavItem"] <i class="val">@Model.ReviewedReviewsPercent%</i></span>
                    <div class="progress-bar-wrap">
                        <div class="progress-bar" role="progressbar" aria-valuenow="@Model.ReviewedReviewsPercent" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>

                <div class="progress">
                    <span class="skill">@HtmlLocalizer["IndexChronicles_NavItem"] <i class="val">@Model.ReviewedChroniclesPercent%</i></span>
                    <div class="progress-bar-wrap">
                        <div class="progress-bar" role="progressbar" aria-valuenow="@Model.ReviewedChroniclesPercent" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>

            </div>
            
            <div class="col-lg-6">

                <div class="progress">
                    <span class="skill">@HtmlLocalizer["IndexForeign_NavItem"] <i class="val">@Model.ReviewedForeignPercent%</i></span>
                    <div class="progress-bar-wrap">
                        <div class="progress-bar" role="progressbar" aria-valuenow="@Model.ReviewedForeignPercent" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>

            </div>

        </div>
        
        <div class="row">
            <p class="text-end">
                <small>* процент на постъпилите ръкописи в редакцията спрямо одобрените/публикувани ръкописи в списанието</small>
            </p>
        </div>

    </div>
</section>
<!-- End Skills Section -->