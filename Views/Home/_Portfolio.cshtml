<!-- ======= Portfolio Section ======= -->
<section id="portfolio" class="portfolio">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2>@HtmlLocalizer["PortfolioSection_Title"]</h2>
            <h3>@HtmlLocalizer["PortfolioSection_SubTitle"]</h3>
